<UserControl x:Class="SolaceEditor.GameProject.OpenProjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SolaceEditor.GameProject"
             mc:Ignorable="d" Width="800"
             d:DesignHeight="450" d:DesignWidth="800">


    <!-- CREATE PROJECT WINDOW -->

    <StackPanel Background="#5C6898">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <ListBox Width="195" Height="250" Background="#D1D5FA"/>
            <Border Width="400" Height="300" Margin="5,0,0,0"/>
        </StackPanel>



        <!-- BUTTONS -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
            <Button Content="Open" Width="96" IsDefault="True" 
                    Background="#A0DDFF" x:Name="btnOpenProject" Click="OnBtnOpen_Click"/>
            <Button Content="Exit" Width="96" Margin="30,0,0,0" IsCancel="True" 
                    Background="#A0DDFF" x:Name="btnExitProject" Click="OnBtnExit_Click"/>
        </StackPanel>

    </StackPanel>


</UserControl>